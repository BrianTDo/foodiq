<div class="row">
  <label for="inputRestName" class="form-label" name="restName"
    >Restaurant Name</label
  >
  <input
    type="text"
    id="inputRestName"
    class="form-control"
    name="restName"
    value="<%= restaurant.restName == null ? '' : restaurant.restName %>"
    required
  />
</div>
<div class="row mb-3">
  <label for="inputAddress" class="form-label" name="address">Address</label>
  <input
    type="text"
    id="inputAddress"
    class="form-control"
    name="address"
    value="<%= restaurant.address == null ? '' : restaurant.address %>"
    required
  />
</div>
<div class="row mb-3">
  <label for="inputCity" class="form-label" name="city">City</label>
  <input
    type="text"
    id="inputCity"
    class="form-control"
    name="city"
    value="<%= restaurant.city == null ? '' : restaurant.city %>"
    required
  />
</div>
<div class="row mb-3">
  <label for="state" class="col-sm-2 control-label">State</label>
  <select
    class="form-select"
    id="state"
    type="text"
    name="state"
    value="<%= restaurant.state == null ? '' : restaurant.state %>"
    required
  >
    <%- include ('_states.ejs') %>
  </select>
</div>
<div class="row mb-3">
  <label for="inputZip" class="form-label" name="zip">Zip Code </label>
  <input
    type="text"
    id="inputZip"
    class="form-control"
    name="zip"
    value="<%= restaurant.zip == null ? '' : restaurant.zip %>"
    required
  />
</div>
<div class="row mb-3">
  <label for="inputPhone" class="form-label">Phone Number</label>
  <input
    type="tel"
    id="inputPhone"
    class="form-control"
    name="phone"
    placeholder="(123) 456-7890"
    pattern="\(\[0-9]{3}\(\ [0-9]{3}-[0-9]{4}"
    value="<%= restaurant.phone == null ? '' : restaurant.phone %>"
    required
  />
</div>
