  <div class="container my-3 overflow-auto text-dark">
    <div class="row">
      <div class="col-md-6">
        <h1>Hello <%= name %>!</h1>
      </div>
    </div>
    <div class="row mt-3 ">
      <a class="btn btn-primary" href="../restaurants/create"
        >Create Restaurant</a
      >
    </div>
    <div class="row my-3">
      <h2>My Restaurants</h2>
      <div class="row mt-1">
